<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="328dp"
        android:layout_height="328dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_logo"
        android:translationY="-50dp" />

    <Button
        android:id="@+id/crearSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:text="Crear Sala" />

    <Button
        android:id="@+id/unirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crearSala"
        android:layout_centerHorizontal="true"
        android:text="Unirse" />

    <TextView
        android:id="@+id/noSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unirse"
        android:layout_centerHorizontal="true"
        android:text="No hay salas, intentelo de nuevo mas tarde" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logoImageView"
        android:layout_centerInParent="true"
        android:scaleX="4"
        android:scaleY="4"
        android:text="Simon Says!!"
        android:translationY="-100dp" />

</RelativeLayout>